<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order("start_date").each do |req| %>
    <tr>
      <td><%= req.start_date %></td>
      <td><%= req.end_date %></td>
      <td>
        <% if req.pending? %>
          <% if current_user_owns_cat? %>
            <%= button_to "Approve", approve_cat_rental_request_url(req) %>
            <%= button_to "Deny", deny_cat_rental_request_url(req) %>
          <% else %>
            <%= req.status %>
          <% end %>
        <% else %>
          <%= req.status %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "Make new request", new_cat_rental_request_url %>
